@model UserLoginViewModel
@{
	ViewBag.Title = "ورود";
}

<div id="page-wrapper">
    <br>
    <div class="inner-content">
        <div class="container">
            <div class="col-md-6 col-md-offset-3">

                <div class="row">
                    <div class="col-md-12">
                        @if (TempData["SuccessActivate"] != null)
                        {
                            <div class="alert alert-success">
                                <p>
                                    @TempData["SuccessActivate"]
                                </p>
                            </div>
                        }

                        @if (TempData["ErrorActivate"] != null)
                        {
                            <div class="alert alert-warning">
                                <p>
                                    @TempData["ErrorActivate"]
                                </p>
                            </div>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 Form-Inputs">
                        <div class="panel panel-success">
                            <div class="panel-heading">ورود به سایت</div>
                            <div class="panel-body">
                                @using (Html.BeginRouteForm("PostLogin", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-group">
                                        <label>
                                            @Html.LabelFor(model => model.UserName, new { HtmlAttributes = new { @class = "form-control" } })
                                        </label>
                                        @Html.EditorFor(model => model.UserName, new { HtmlAttributes = new { @class = "form-control", @PlaceHolder = Html.DisplayNameFor(model => model.UserName) } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>
                                            @Html.LabelFor(model => model.Password, new { HtmlAttributes = new { @class = "form-control" } })
                                        </label>
                                        @Html.EditorFor(model => model.Password, new { HtmlAttributes = new { @class = "form-control", @PlaceHolder = Html.DisplayNameFor(model => model.Password) } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group direction-ltr">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="@nameof(Model.RememberMe)" value="true" />
                                                <span>@Html.DisplayNameFor(model => model.RememberMe)</span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="ورود" class="btn btn-success btn-block">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>

</div>

@section scripts
{
	<script src="~/Content/js/jquery.validate.min.js"></script>
	<script src="~/Content/js/jquery.validate.unobtrusive.min.js"></script>
	<script src="~/Content/js/jquery.unobtrusive-ajax.min.js"></script>
}