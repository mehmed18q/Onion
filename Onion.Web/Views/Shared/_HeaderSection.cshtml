<div class="header-section">
    <a class="toggle-btn menu-collapsed"><i class="fa fa-bars"></i></a>
    <div class="menu-right">
        <div class="profile_details">
            <div class="col-md-12 login-pop">
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="loginpop">
                        <a href="@Url.RouteUrl("GetRegister")"> <span>  ثبت نام</span> </a>
                    </div>
                    <div class="loginpop">
                        <a href="@Url.RouteUrl("GetLogin")"> <span> ورود </span> </a>
                    </div>
                }
                else
                {
                    <div class="loginpop">
                        <a> <span>@User.Identity.Name ، خوش آمدید</span> </a>
                    </div>
                    <div class="loginpop">
                        <a href="@Url.RouteUrl("SignOut")"> <span> خروج </span> </a>
                    </div>
                }
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
